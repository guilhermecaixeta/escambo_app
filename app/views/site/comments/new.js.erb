<% helpers = ActionController::Base.helpers %>

onTurboLinksLoad(() => {
  let ratyEl = document.querySelector("[user-data-raty]");
  if (ratyEl) {
    const raty = new Raty(ratyEl, { scoreName: 'comment[member][rating]', path: '<%= helpers.asset_path('/assets') %>' });

    raty.init();
  }
});
