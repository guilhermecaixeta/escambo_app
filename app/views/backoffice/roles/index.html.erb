<p class="lead">
  <%= Role.model_name.human(count: 2) %>
</p>
<div class="card mb-4">
  <div class="card-header">
    <%= Role.model_name.human(count: 2) %>
    <%= link_to new_backoffice_role_path, class: "btn btn-primary btn-circle float-end" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive w-auto">
      <table id="datatablesSimple" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9"><%= Role.human_attribute_name("name") %></th>
            <th scope="col" class="col-9"><%= Role.human_attribute_name("permissions") %></th>
            <th scope="col" class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @objects.each do |role| %>
            <tr>
              <td><%= role.id %></td>
              <td><%= role.name %></td>
              <td><%= role.permissions.map{|permission| permission.name}.join(', ') %></td>
              <td>
                <% if policy(current_user).can_read_and_write? %>
                  <%= link_to edit_backoffice_role_path(role), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9"><%= Role.human_attribute_name("name") %></th>
            <th scope="col" class="col-9"><%= Role.human_attribute_name("permissions") %></th>
            <th scope="col" class="col-2"></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
<%= render 'shared/backoffice/send_mail' %>
