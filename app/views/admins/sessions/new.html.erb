<section class="bg-primary">
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-5">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                  <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
                    <% flash.each do |key, message| %>
                      <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                      </div>
                    <% end %>
                    <div class="form-floating mb-3">
                      <%= f.email_field :email, class: "form-control", placeholder: "E-mail", type: "email", autofocus: "autofocus" %>
                      <%= f.label :email %>
                    </div>
                    <div class="form-floating mb-3">
                      <%= f.password_field :password, class: "form-control", placeholder: "Password", type: "password", autofocus: "autofocus" %>
                      <%= f.label :password %>
                    </div>
                    <% if devise_mapping.rememberable? %>
                      <div class="form-check mb-3">
                        <%= f.check_box :remember_me, class: "form-check-input" %>
                        <%= f.label :remember_me, class: "form-check-label" %>
                      </div>
                    <% end %>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                      <%= link_to t('layout.links.forgot_password'),  new_admin_password_path %>
                      <a class="small" href="password.html"></a>
                      <%= f.submit t('layout.buttons.login'), class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
    <%= render partial: 'admins/shared/footer' %>
  </div>
</section>
