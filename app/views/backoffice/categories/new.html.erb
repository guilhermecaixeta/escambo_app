<div class="container-fluid px-4">
  <p class="lead">
    <%= Category.model_name.human(count: 2) %>
  </p>
  <div class="card mb-4">
    <div class="card-header">
      Adicionando Nova <%= Category.model_name.human(count: 1) %>
    </div>
    <div class="card-body">
      <%= form_with(model: [:backoffice, @category]) do |f| %>
        <div class="col-6">
          <div class="form-floating mb-3">
            <%= f.text_field :description, class: "form-control", placeholder: "#{Category.human_attribute_name("description")}", type: "text", autofocus: "autofocus" %>
            <%= f.label :description %>
          </div>
        </div>
        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
          <%= link_to t('layout.buttons.back'), backoffice_categories_path, class: "small" %>
          <%= f.submit t('layout.buttons.save'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render partial: 'shared/backoffice/footer' %>
