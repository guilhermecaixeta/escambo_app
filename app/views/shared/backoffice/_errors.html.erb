<% if @object.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show">
    <% @object.errors.full_messages.each do |message| %>
      <ul>
        <li>
          <%= message %>
        </li>
      </ul>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
