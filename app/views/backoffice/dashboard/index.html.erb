<h1 class="mt-4">
  <%= t 'layout.text.dashboard', count: 2 %>
</h1>
<%= render partial: "shared/backoffice/bread_crumb" %>
<div class="card mb-4">
  <div class="card-header">
    <i class="fas fa-chart-area me-1"></i>
    Area Chart Example
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <%= t 'layout.text.dashboard.no_statistic' %>
    </h5>
    <canvas id="backoffice_area_chart" width="100%" height="30"></canvas>
  </div>
  <div class="card-footer small text-muted">
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="card mb-4">
      <div class="card-header">
        <i class="fas fa-chart-bar me-1"></i>
        <%= t 'layout.text.dashboard.most_accessed_category_title' %>
      </div>
      <div class="card-body">
        <% if @most_seem_categories.any? %>
          <canvas id="backoffice_bar_chart" width="100%" height="50"></canvas>
        <% else %>
          <h5 class="card-title">
            <%= t 'layout.text.dashboard.no_statistic' %>
          </h5>
        <% end %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card mb-4">
      <div class="card-header">
        <i class="fas fa-chart-pie me-1"></i>
        <%= t 'layout.text.dashboard.most_accessed_advertisement_title' %>
      </div>
      <div class="card-body">
        <% if @most_seem_advertisements.any? %>
          <canvas id="backoffice_pie_chart" width="100%" height="50"></canvas>
        <% else %>
          <h5 class="card-title">
            <%= t 'layout.text.dashboard.no_statistic' %>
          </h5>
        <% end %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>
<%= render "backoffice/dashboard/dashboards.js" %>
