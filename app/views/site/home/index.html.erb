<!-- Header-->
<header class="bg-dark py-5">
  <div class="container-fluid px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder"><%= t 'layout.text.app_name' %></h1>
      <p class="lead fw-normal text-white-50 mb-0"><%= t 'layout.text.sub_title_app' %></p>
    </div>
  </div>
</header>
<!-- Section-->
<section class="py-5">
  <div class="container-fluid px-4 px-lg-5 mt-5">
    <div class="row">
      <div class="col-2">
        <p class="lead">
          <%= Category.model_name.human(count: 2) %>
        </p>
        <div class="list-group overflow-auto">
          <% @categories.each do |category| %>
            <a class="list-group-item" aria-current="page" href="#"><%= category.description %></a>
          <% end %>
        </div>
      </div>
      <div class="col">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
          <% for item in @ads %>
            <div class="col mb-5">
              <div class="card h-100">
                <!-- Product image-->
                <%= image_tag(item.picture.variant(resize: "450x300!"), class: "card-img-top") %>
                <!-- Product details-->
                <div class="card-body p-4">
                  <div class="text-center">
                    <!-- Product name-->
                    <h5 class="fw-bolder"><%= item.title %></h5>
                    <!-- Product price-->
                    <%= humanized_money_with_symbol item.price %>
                  </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                  <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#"><%= t 'layout.action_text.view_options' %></a></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render partial: "shared/modal" %>
