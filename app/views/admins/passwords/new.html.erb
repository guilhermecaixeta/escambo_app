<section class="bg-primary">
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-5">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                  <h3 class="text-center font-weight-light my-4">Password Recovery</h3>
                </div>
                <div class="card-body">
                  <div class="small mb-3 text-muted">Enter your email address and we will send you a link to reset your password.</div>
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <div class="form-floating mb-3">
                      <%= f.email_field :email, class: "form-control", placeholder: "E-mail", type: "email", autofocus: "autofocus" %>
                      <%= f.label :email %>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                      <%= link_to t('layout.links.return_to_login'), new_admin_session_path, class: "small" %>
                      <%= f.submit t('layout.links.reset_password'), class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
    <%= render partial: 'admins/shared/footer' %>
  </div>
</section>