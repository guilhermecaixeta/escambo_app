<%= form_with(model: [:backoffice, @category], local: true) do |f| %>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <% if @category.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show">
          <% @category.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
      <div class="card mb-4 ">
        <div class="card-header">
          <%= t 'layout.text.new', :gender => :f %> <%= Category.model_name.human %>
        </div>
        <div class="card-body">
          <div class="form-floating mb-3">
            <%= f.text_field :description, class: "form-control", placeholder: "#{Category.model_name.human}", type: "text", autofocus: "autofocus" %>
            <%= f.label :description %>
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <%= link_to t('layout.buttons.back'), backoffice_categories_path, class: "btn btn-secondary" %>
            <%= f.submit t('layout.buttons.save'), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
<% end %>
