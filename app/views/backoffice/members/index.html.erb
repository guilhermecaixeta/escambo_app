<p class="lead">
  <%= Member.model_name.human(count: 2) %>
</p>
<div class="card mb-4">
  <div class="card-header">
    <%= Member.model_name.human(count: 2) %>
  </div>
  <div class="card-body">
    <div class="table-responsive w-auto">
      <table id="datatablesSimple" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9"><%= User.human_attribute_name("name") %></th>
            <% if policy(current_user).can_read_and_write? %>
              <th scope="col" class="col-9"><%= User.human_attribute_name("email") %></th>
            <% end %>
            <th scope="col" class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @objects.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <% if policy(current_user).can_read_and_write? %>
                <td><%= user.email %></td>
                <td>
                  <%= link_to edit_backoffice_member_path(user), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9"><%= User.human_attribute_name("name") %></th>
            <% if policy(current_user).can_read_and_write? %>
              <th scope="col" class="col-9"><%= User.human_attribute_name("email") %></th>
            <% end %>
            <th scope="col" class="col-2"></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
<%= render 'shared/backoffice/send_mail' %>
