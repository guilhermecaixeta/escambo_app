<p class="lead">
  <%= Admin.model_name.human(count: 2) %>
</p>
<div class="card mb-4">
  <div class="card-header">
    <%= Admin.model_name.human(count: 2) %>
  </div>
  <div class="card-body">
    <div class="table-responsive w-auto">
      <table id="datatablesSimple" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9"><%=Admin.human_attribute_name("email")%></th>
            <th scope="col" class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td>
                <%= admin.email %>
              </td>
              <td>
                <%= link_to edit_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <% if current_admin.email != admin.email %>
                  <%= link_to backoffice_admin_path(admin), 
                      method: :delete, 
                      class:"btn btn-danger btn-circle", 
                      data: { 
                        confirm: t('layout.text.backoffice.management.users.delete_confirmation', name: admin.email)
                      } do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th>#</th>
            <th><%=Admin.human_attribute_name("email")%></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
