<section class="bg-primary">
  <div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
      <main>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-5">
              <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                  <h3 class="text-center font-weight-light my-4"><%= t('layout.backoffice.management.users.new_password') %></h3>
                </div>
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <div class="card-body">
                    <div class="small mb-3 text-muted"><%= t 'layout.backoffice.management.users.new_password_definition' %></div>
                    <%= render "users/shared/error_messages", resource: resource %>
                    <%= f.hidden_field :reset_password_token %>
                    <div class="form-floating mb-3">
                      <%= f.password_field :password, placeholder: "Password", type: "password", autofocus: "autofocus", class: "form-control" %>
                      <%= f.label :password, t('layout.backoffice.management.users.new_password') %>
                      <% if @minimum_password_length %>
                        <div id="passwordHelpBlock" class="form-text">
                          (<%= @minimum_password_length %> characters minimum)
                        </div>
                      <% end %>
                    </div>
                    <div class="form-floating mb-3">
                      <%= f.password_field :password_confirmation, placeholder: "Password", type: "password", autofocus: "autofocus", class: "form-control" %>
                      <%= f.label :password_confirmation, t('layout.backoffice.management.users.confirmation_password') %>
                    </div>
                  </div>
                  <div class="card-footer">
                    <%= f.submit t('layout.buttons.password_change'), class: "btn btn-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</section>
