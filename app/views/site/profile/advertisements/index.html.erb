<!-- Page Heading -->
<h1 class="my-4">
  <small><%= t 'site.ads.title' %></small>
</h1>
<div class="row">
  <% if policy(current_member).can_read_and_write? %>
    <div class="col-12 mp-3 pb-3">
      <%= link_to new_site_profile_advertisement_path, class: "btn btn-primary float-start", remote: true do %>
        <%= t('layout.text.new') %> <%= Advertisement.model_name.human %>
      <% end %>
    </div>
  <% end %>
  <% for item in @advertisements %>
    <div class="col-lg-2 col-md-3 col-sm-6 mb-4">
      <div class="card">
        <% if item.picture.attached? %>
          <%= image_tag(
          item.picture.variant(resize: "700x400!"),
          class: "card-img-top") %>
        <% end %>
        <div class="card-body">
          <h4 class="card-title">
            <% if policy(current_member).can_read_and_write? && item.finish_date >= DateTime::now.to_date %>
              <%= link_to item.title, edit_site_profile_advertisement_path(item.id), class: "btn btn-link", remote: true %>
            <% else %>
              <%= item.title %>
            <% end %>
          </h4>
          <p class="card-text text-truncate">
            <%= item.description %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<!-- /.row -->
<!-- Pagination -->
<ul class="pagination justify-content-center">
  <li class="page-item">
    <a class="page-link" href="#" aria-label="Previous">
      <span aria-hidden="true">&laquo;</span>
      <span class="sr-only">Previous</span>
    </a>
  </li>
  <li class="page-item">
    <a class="page-link" href="#">1</a>
  </li>
