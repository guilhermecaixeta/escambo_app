<div class="d-flex justify-content-between mt-3 mb-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('devise.buttons.login'), new_session_path(resource_name), class: "btn btn-link" %>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('devise.buttons.sign_up'), new_registration_path(resource_name) , class: "btn btn-link" %>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('devise.buttons.forgot_password'), new_password_path(resource_name) , class: "btn btn-link" %>
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('devise.buttons.confirmation_instructions_not_received'), new_confirmation_path(resource_name) , class: "btn btn-link" %>
  <% end %>
</div>
