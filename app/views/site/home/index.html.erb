<%= render partial: 'shared/site/header_index' %>
<!-- Section-->
<section class="py-5" id="index_main_section">
  <div class="container-fluid px-4 px-lg-5 mt-5">
    <div class="row">
      <div class="col-3">
        <p class="lead text-center">
          <%= Category.model_name.human(count: 2) %>
        </p>
        <div class="list-group overflow-auto">
          <% @categories.each do |category| %>
            <a class="list-group-item" aria-current="page" href="#"><%= category.description %></a>
          <% end %>
        </div>
      </div>
      <div class="col-9">
        <div class="row gx-2 row-cols-md-3 row-cols-lg-6 row-cols-xl-9 row-cols-xxl-12 justify-content-center">
          <% for item in @ads %>
            <div class="col mb-3">
              <div class="card h-100">
                <!-- Product image-->
                <%= image_tag(item.picture.variant(resize: "450x300!"), class: "card-img-top") %>
                <!-- Product details-->
                <div class="card-body p-4">
                  <div class="text-center">
                    <!-- Product name-->
                    <h5 class="fw-bolder">
                      <%= link_to item.title, site_advertisement_path(item), class: "btn", remote: true %>
                    </h5>
                    <!-- Product price-->
                    <%= humanized_money_with_symbol item.price %>
                  </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                  <div class="text-center">
                    <%= link_to t('layout.action_text.view_options'), site_advertisement_path(item), class: "btn btn-outline-dark mt-auto", remote: true %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
