ready(() => {
  const modal = new bootstrap.Modal('#sendMailModal');
  showModal(modal);
  updateModal(modal);
});


function showModal(modal) {
  document.getElementById('sendMailModal')?.addEventListener('show.bs.modal', event => {
    const sendMailModal = document.getElementById('sendMailModal');
    // Update the modal's content.
    const modalBodyInput = sendMailModal.querySelector('.modal-body input')

    modalBodyInput.value = '<%= @admin.email %>';
  });

  modal.show(document.getElementById("sendMailModal"));
}

function updateModal(modal) { }