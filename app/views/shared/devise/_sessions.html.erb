<% content_for :card_body do %>
  <%= form_with(model: resource, url: session_path(resource_name, format: "html"), local: true) do |f| %>
    <% flash.each do |key, message| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <div class="form-floating mb-3">
      <%= f.email_field :email, class: "form-control", placeholder: "E-mail", type: "email", autofocus: "autofocus" %>
      <%= f.label :email %>
    </div>
    <div class="form-floating mb-3">
      <%= f.password_field :password, class: "form-control", placeholder: "Password", type: "password", autofocus: "autofocus" %>
      <%= f.label :password %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>
    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
      <%= link_to t('devise.buttons.forgot_password'), password_path %>
      <%= f.submit t('devise.buttons.login'), class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
<%= render partial: 'shared/devise/template', locals: { header_title: t("devise.title.login") } %>
