<!-- Related items section-->
<section class="py-5 bg-light" id="related_items_section">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4"><%= t 'layout.text.site.related_products' %></h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% for item in @releated_advertisements %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <%= image_tag(item.picture.variant(resize: "450x300!"), class: "card-img-top") %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">
                  <%= link_to item.title, 
                      site_advertisement_path(item), 
                      class: "btn", 
                      data: { turbolinks: "true" } %>
                </h5>
                <!-- Product price-->
                <%= humanized_money_with_symbol item.price %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <%= link_to "View options", 
                    site_advertisement_path(item), 
                    class: "btn btn-outline-dark mt-auto", 
                    data: { turbolinks: "true" } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
