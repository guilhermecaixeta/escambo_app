<p class="lead">
  <%= Category.model_name.human(count: 2) %>
</p>
<%= render partial: "shared/backoffice/bread_crumb" %>
<div class="card mb-4">
  <div class="card-header">
    <%= Category.model_name.human(count: 2) %>
    <%= link_to new_backoffice_category_path, class: "btn btn-primary btn-circle float-end" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table id="datatablesSimple" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9">
              <%= Category.human_attribute_name("description") %>
            </th>
            <th scope="col" class="col-2"></th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>#</th>
            <th><%= Category.human_attribute_name("description") %></th>
          </tr>
        </tfoot>
        <tbody>
          <% @objects.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.description %></td>
              <td>
                <% if policy(current_admin).can_read_and_write? %>
                  <%= link_to edit_backoffice_category_path(category), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  <button type="button" class="btn btn-danger btn-circle">
                    <i class="fa fa-times"></i>
                  </button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
