<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="row gx-4 gx-lg-5 align-items-center">
      <div class="col-md-6">
        <%= image_tag(@advertisement.picture.variant(resize: "600x700!"), 
            class: "card-img-top mb-5 mb-md-0") %>
      </div>
      <div class="col-md-6">
        <div class="small mb-1">SKU: BST-498</div>
        <h1 class="display-5 fw-bolder"><%= @advertisement.title %></h1>
        <div class="fs-5 mb-5">
          <span class="text-decoration-line-through">
            <%= humanized_money_with_symbol @advertisement.price %>
          </span>
          <span>
            <%= humanized_money_with_symbol @advertisement.price %>
          </span>
        </div>
        <p class="lead">
          <%= @advertisement.description.html_safe %>
        </p>
        <div class="d-flex">
          <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
          <button class="btn btn-outline-dark flex-shrink-0" type="button">
            <i class="bi-cart-fill me-1"></i>
            Add to cart
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
  <div class="container px-4 px-lg-5 mt-5">
    <h2 class="fw-bolder mb-4"><%= t 'layout.text.site.related_products' %></h2>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% for item in @releated_advertisements %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <%= image_tag(item.picture.variant(resize: "450x300!"), class: "card-img-top") %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">
                  <%= link_to item.title, 
                      site_advertisement_path(item), 
                      class: "btn", 
                      remote: true %>
                </h5>
                <!-- Product price-->
                <%= humanized_money_with_symbol item.price %>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <%= link_to "View options", 
                    site_advertisement_path(item), 
                    class: "btn btn-outline-dark mt-auto", 
                    remote: true %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
