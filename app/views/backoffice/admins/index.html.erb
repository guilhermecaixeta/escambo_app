<p class="lead">
  <%= Admin.model_name.human(count: 2) %>
</p>
<div class="card mb-4">
  <div class="card-header">
    <%= Admin.model_name.human(count: 2) %>
    <% if policy(current_user).can_read_and_write? %>
      <%= link_to new_backoffice_admin_path, class: "btn btn-primary btn-circle float-end" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive w-auto">
      <table id="datatablesSimple" class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9"><%= User.human_attribute_name("name") %></th>
            <th scope="col" class="col-9"><%= User.human_attribute_name("email") %></th>
            <th scope="col" class="col-2"><%= User.human_attribute_name("roles") %></th>
            <th scope="col" class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @objects.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.roles.map{|role| role.name}.join(', ') %></td>
              <td>
                <% if policy(current_user).can_read_and_write? %>
                  <% if current_user.email != user.email %>
                    <%= link_to backoffice_message_new_path(message_id: user.id), class: "btn btn-info btn-circle", remote: true, method: :post do %>
                      <i class="fa fa-envelope"></i>
                    <% end %>
                  <% end %>
                  <%= link_to edit_backoffice_admin_path(user), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  <% if current_user.email != user.email %>
                    <%= link_to( backoffice_admin_path(user),
                      method: :delete,
                      class:"btn btn-danger btn-circle",
                      data: { confirm: t('layout.text.backoffice.management.admins.delete_confirmation', name: user.name) }) do %>
                      <i class="fa fa-times"></i>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th scope="col" class="col-1">#</th>
            <th scope="col" class="col-9"><%= User.human_attribute_name("name") %></th>
            <th scope="col" class="col-9"><%= User.human_attribute_name("email") %></th>
            <th scope="col" class="col-9"><%= User.human_attribute_name("roles") %></th>
            <th scope="col" class="col-2"></th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
<%= render 'shared/backoffice/send_mail' %>
